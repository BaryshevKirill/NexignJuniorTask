    <changeSet id="6" author="Kirill">
        <createTable tableName="products">
            <column name="id" type="INT" autoIncrement="true" incrementBy="1" startWith="1">
                <constraints primaryKey="true"/>
            </column>

            <column name="product_name" type="varchar(32)">
                <constraints nullable="false"/>
            </column>

            <column name="producer" type="varchar(32)">
                <constraints nullable="false"/>
            </column>

            <column name="is_visible" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <column name="create_date" type="DATETIME" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <rollback>
            <dropTable  tableName="products"/>
        </rollback>

    </changeSet>


    <changeSet id="7" author="Kirill">
        <sql>
            ALTER TABLE products ADD CONSTRAINT UNIQUE (product_name, producer)
        </sql>
    </changeSet>

    <changeSet id="8" author="Kirill">
        <createTable tableName="products_hist">
            <column name="id" type="INT" autoIncrement="true" incrementBy="1" startWith="1">
                <constraints primaryKey="true"/>
            </column>

            <column name="product_id" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="calories" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="proteins" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="fat" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="carbohydrate" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="is_visible" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <column name="update_date" type="DATETIME" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <rollback>
            <dropTable  tableName="products_hist"/>
        </rollback>

    </changeSet>

    <changeSet id="9" author="Kirill">
        <sql>
            alter table products_hist add CHECK (fat + proteins + carbohydrate &lt;= 100);
        </sql>
    </changeSet>

</databaseChangeLog>