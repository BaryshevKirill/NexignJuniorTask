<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="Kirill">
        <createTable tableName="products">
            <column name="id" type="INT" autoIncrement="true" incrementBy="1" startWith="1">
                <constraints primaryKey="true"/>
            </column>

            <column name="product_name" type="varchar(32)">
                <constraints nullable="false"/>
            </column>

            <column name="producer" type="varchar(32)">
                <constraints nullable="false"/>
            </column>

            <column name="calories" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="proteins" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="fat" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="carbohydrate" type="DOUBLE(7,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>


<!--mysql> DROP TABLE IF EXISTS databasechangelog, databasechangeloglock,products,productstatus;-->
    <changeSet author="Kirill" id="2">
        <sql>
            alter table products add CHECK (fat+proteins+carbohydrate &lt;=100);
        </sql>
    </changeSet>


    <changeSet id="3" author="Kirill">
        <createTable tableName="productstatus">

            <column name="id" type="INT" autoIncrement="true" incrementBy="1" startWith="1">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name = "product_id" type="INT">
                <constraints nullable="false"
                             foreignKeyName="FK_Region_City"
                             referencedTableName="products" referencedColumnNames="id" deleteCascade="true"/>
            </column>

            <column name="status" type="boolean" defaultValueBoolean="false">
                    <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>


</databaseChangeLog>